{
  "private": true,
  "name": "questigo-monorepo",
  "version": "1.0.0",
  "packageManager": "pnpm@10.12.4",
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "pnpm --filter native dev",
    "dev:native": "pnpm --filter native dev",
    "dev:mobile": "pnpm --filter native dev",
    "build": "turbo run build",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\" --ignore-path .gitignore",
    "lint": "eslint .",
    "lint:web": "pnpm --filter web lint",
    "lint:native": "pnpm --filter native lint",
    "lint-staged": "pnpm exec lint-staged",
    "precommit": "pnpm exec lint-staged",
    "prepare": "husky",
    "android": "pnpm --filter native android",
    "ios": "pnpm --filter native ios",
    "prebuild": "pnpm --filter native prebuild",
    "prebuild:clean": "pnpm --filter native prebuild:clean",
    "start": "pnpm --filter native start",
    "start:clear": "pnpm --filter native start:clear"
  },
  "devDependencies": {
    "@babel/helper-module-imports": "^7.27.1",
    "@babel/template": "^7.27.2",
    "@babel/traverse": "^7.28.0",
    "@babel/types": "^7.28.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3.1.1",
    "ts-node": "^10.9.2",
    "turbo": "^2.5.5",
    "typescript": "~5.8.3"
  },
  "engines": {
    "node": ">=18"
  },
  "lint-staged": {
    "apps/web/**/*.{js,jsx,ts,tsx}": [
      "npx eslint",
      "npx prettier --write"
    ],
    "apps/native/**/*.{js,jsx,ts,tsx}": [
      "npx eslint",
      "npx prettier --write"
    ],
    "packages/**/*.{js,jsx,ts,tsx}": [
      "npx prettier --write"
    ],
    "*.{json,md}": [
      "npx prettier --write"
    ]
  },
  "pnpm": {
    "overrides": {
      "@expo/config-plugins": "~10.1.1",
      "@expo/metro-config": "~0.20.0",
      "metro": "^0.82.0",
      "metro-resolver": "^0.82.0",
      "metro-config": "^0.82.0",
      "metro-cache": "^0.82.0",
      "@expo/prebuild-config": "~9.0.0",
      "react-dom": "19.0.0"
    }
  },
  "dependencies": {
    "i18next": "^25.5.2",
    "react-i18next": "^15.7.3"
  }
}